<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sport_e">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_football"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light">
        <activity android:name=".forgot"></activity>
        <activity android:name=".QuizReceive" />
        <activity android:name=".QuizSend" />
        <activity android:name=".leaderboard" />
        <activity android:name=".pendingRequests" />
        <activity android:name=".SendRequest" />
        <activity android:name=".stats" />
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Standings" />
        <activity android:name=".Choose_Brigade" />
        <activity android:name=".Profile" />
        <activity android:name=".Fans" />
        <activity android:name=".Predict" />
        <activity
            android:name=".Brigade"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".Home" />
        <activity android:name=".Registration" />
        <activity android:name=".MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>